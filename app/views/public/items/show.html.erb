<main>
  <p id="notice"></p>
  <div class = "container">
    <div class = "row">

      <div class = "col-sm-3">
        <%= image_tag @item.image, :size =>'200x150' %>
      </div>

      <div class = "col-sm-9">
        <div class = "row">
          <div class = "col-sm-12">
            <strong><%= @item.name %></strong>
          </div>

          <div class = "col-sm-12">
            <%= @item.introduction %>
          </div>

          <div class = "col-sm-12">
            <strong>¥<%= @item.taxin_price %></strong>(税込み)
          </div>

          <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
          <div class = "col-sm-6">
            <%= f.select :amount, *[1..10], include_blank: "個数選択" %>
            <%= f.hidden_field :item_id, value: @item.id %>
          </div>

          <div class = "col-sm-6">
            <%= f.submit "カートに入れる", class: "btn btn-success" %>
          </div>
          <% end %>

        </div>
      </div>

    </div>
  </div>
</main>