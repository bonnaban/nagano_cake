<main>
  <h5>注文情報入力</h5>
  <p id="notice"></p>
  <div class = "container">
    <div class = "row">
      <div class = "col-sm-10">

      <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
      <h5><strong>支払方法</strong></h5>
      <div class = "ml-5">
        <%= f.radio_button :payment_method, '0', checked: true %>
        <%= f.label :payment_method, "クレジットカード", {style: "display: inline-block;"} %>
      </div>

      <div class = "ml-5">
        <%= f.radio_button :payment_method, '1' %>
        <%= f.label :payment_method, "銀行振込", {style: "display: inline-block;"} %>
      </div>

      <h5><strong>お届け先</strong></h5>
      <div class = "ml-5">
        <%= f.radio_button :address, '0', checked: true %>
        <%= f.label :address, "ご自身の住所", {value: '0', style: "display: inline-block;"} %></br>
        <%= @customer.postal_code %><%= @customer.address %></br>
        <%= @customer.last_name %><%= @customer.first_name %>
      </div>

      <div class = "ml-5">
        <%= f.radio_button :address, '1' %>
        <%= f.label :address, "登録済住所から選択", {style: "display: inline-block;"} %>
        <%= f.collection_select :id, Customer.all, :id, :order_information %>
      </div>

      <div class = "ml-5">
        <%= f.radio_button :address, '2' %>
        <%= f.label :address, "新しいお届け先", {style: "display: inline-block;"} %>
      </div>

      <div class = "row">
        <div class = "col-sm-5 ml-5 pl-4">
          郵便番号(ハイフンなし)
        </div>
        <div class = "col-sm-3">
          <%= f.number_field :postal_code, autocomplete: "postal_code", :placeholder => "0000000" %>
        </div>
      </div>

      <div class = "row">
        <div class = "col-sm-5 ml-5 pl-4">
          住所
        </div>
        <div class = "col-sm-6">
          <%= f.text_field :address, autocomplete: "address", :placeholder => "東京都渋谷区神園町0-0" %>
        </div>
      </div>

      <div class = "row">
        <div class = "col-sm-5 ml-5 pl-4">
          宛名
        </div>
        <div class = "col-sm-3">
          <%= f.text_field :last_name, autocomplete: "last_name", :placeholder => "令和" %>
        </div>
        <div class = "col-sm-3">
          <%= f.text_field :first_name, autocomplete: "first_name", :placeholder => "道子" %>
        </div>
      </div>

        <%= f.submit "確認画面へ進む", class: "btn btn-sm btn-primary offset-sm-6 mt-4" %>

      <% end %>
      </div>
    </div>
  </div>
</main>
