<main>
  <h5>注文履歴一覧</h5>
  <p id="notice"></p>
  <div class = "container">
    <div class = "row">
      <div class = "col-sm-8">

        <table class = "col-sm-12" border = "2">
          <thead>
            <tr>
              <th bgcolor = "#C0C0C0">注文日</th>
              <th bgcolor = "#C0C0C0">配送先</th>
              <th bgcolor = "#C0C0C0">注文商品</th>
              <th bgcolor = "#C0C0C0">支払金額</th>
              <th bgcolor = "#C0C0C0">ステータス</th>
              <th bgcolor = "#C0C0C0" colspan = "5">注文詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @order.each do |order| %>
            <tr>
              <td><%= order.created_at %></td>
              <td><%= order.address %></td>
              <td><% order.name %></td>
              <td><% order.billing_amount %></td>
              <td><% order.status %></td>
              <td><%= link_to "表示する", order_path(order), class: 'btn btn-sm btn-primary' %></td>
            </tr>
            <% end %>
          </tbody>
        </table>


      </div>
    </div>
  </div>
</main>