<main>
  <h5>会員情報編集</h5>
  <%= render 'partial_template/error', error: @customer %>

  <div class = "container">
    <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
      <div class = "row">
        <div class = "col-sm-9">
          <%= render 'partial_template/customer_edit', f: f %>
        </div>
      </div>

      <div class="row mt-2">
        <div class = "col-sm-3 offset-sm-3">
          <%= f.submit "編集内容を保存", class: "btn btn-sm btn-success" %>
        </div>
        <div class = "col-sm-3">
          <%= link_to "退会する", customers_confirmation_path, class: 'btn btn-sm btn-danger' %>
        </div>
      </div>
    <% end %>
  </div>
</main>