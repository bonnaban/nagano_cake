<main>
  <p id="notice"></p>
   <div class = "container px-5 px-sm-0">
     <div class = "row">
       <h3>マイページ</h3>
       <h4><strong>登録情報</strong></h4><%= link_to "編集する", new_customer_session_path, class: 'btn btn-success' %>

       <table border = "1", bgcolor = "secondary">
         <tr>
           <td>氏名</td>
           <td><%= @customer.last_name, @customer.first_name %></td>
         </tr>

         <tr>
           <td>カナ</td>
           <td><%= @customer.last_name_kana, @customer.first_name_kana %></td>
         </tr>
         
         <tr>
           <td>郵便番号</td>
           <td><%= @customer.postal_code %></td>
         </tr>
         
         <tr>
           <td>住所</td>
           <td><%= @customer.address %></td>
         </tr>
         
         <tr>
           <td>電話番号</td>
           <td><%= @customer.telephone_number %></td>
         </tr>
         
         <tr>
           <td>メールアドレス</td>
           <td><%= @customer.email %></td>
         </tr>
       </table>
     </div>
   </div>
</main>