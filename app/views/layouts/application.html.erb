<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name = "viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class = "d-flex flex-column vh-100">
    <header class = "shadow-sm">
      <nav class = "navbar navbar-expand-lg navbar-light">
        <div class = "container">
          <% if admin_signed_in? %>
            <%= link_to "nagano_cake", admin_top_path, class: "navbar-brand" %>
          <% elsif customer_signed_in? %>
            <%= link_to "nagano_cake", top_path, class: "navbar-brand" %>
          <% else %>
            <%= link_to "nagano_cake", top_path, class: "navbar-brand" %>
          <% end %>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>

                <li class = "nav-item">
                  <%= link_to admin_items_path, class: 'nav-link btn btn-outline-secondary text-dark btn-sm' do %>
                    商品一覧
                  <% end %>
                </li>

                <li class = "nav-item">
                  <%= link_to admin_customers_path, class: 'nav-link btn btn-outline-secondary text-dark btn-sm ml-5' do %>
                    会員一覧
                  <% end %>
                </li>

                <li class = "nav-item">
                  <%= link_to admin_top_path, class: 'nav-link btn btn-outline-secondary text-dark btn-sm ml-5' do %>
                    注文履歴一覧
                  <% end %>
                </li>

                <li class = "nav-item">
                  <%= link_to admin_genres_path, class: 'nav-link btn btn-outline-secondary text-dark btn-sm ml-5' do %>
                    ジャンル一覧
                  <% end %>
                </li>

                <li class = "nav-item">
                  <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link btn btn-outline-secondary text-dark btn-sm ml-5' do %>
                    ログアウト
                  <% end %>
                </li>

              <% elsif customer_signed_in? %>

                <li class = "nav-item">
                  <%= link_to customers_my_page_path, class: 'nav-link btn btn-outline-secondary text-dark btn-sm' do %>
                    マイページ
                  <% end %>
                </li>

                <li class = "nav-item">
                  <%= link_to items_path, class: 'nav-link btn btn-outline-secondary text-dark btn-sm ml-5' do %>
                    商品一覧
                  <% end %>
                </li>

                <li class = "nav-item">
                  <%= link_to cart_items_path, class: 'nav-link btn btn-outline-secondary text-dark btn-sm ml-5' do %>
                    カート
                  <% end %>
                </li>

                <li class = "nav-item">
                  <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link btn btn-outline-secondary text-dark btn-sm ml-5' do %>
                    ログアウト
                  <% end %>
                </li>

              <% else %>

                <li class = "nav-item">
                  <%= link_to about_path, class: 'nav-link btn btn-outline-secondary text-dark btn-sm ml-5' do %>
                    About
                  <% end %>
                </li>

                <li class = "nav-item">
                  <%= link_to items_path, class: 'nav-link btn btn-outline-secondary text-dark btn-sm ml-5' do %>
                    商品一覧
                  <% end %>
                </li>

                <li class = "nav-item">
                  <%= link_to new_customer_registration_path, class: 'nav-link btn btn-outline-secondary text-dark btn-sm ml-5' do %>
                    新規登録
                  <% end %>
                </li>

                <li class = "nav-item">
                  <%= link_to new_customer_session_path, class: 'nav-link btn btn-outline-secondary text-dark btn-sm ml-5' do %>
                    ログイン
                  <% end %>
                </li>

              <% end %>
          </ul>
         </div>
        </div>
      </nav>
    </header>

      <%= yield %>

    <footer class = "shadow-sm">
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto"></div>
        </div>
      </div>
    </footer>

  </body>
</html>
