<div class = "row mt-2">
  <div class = "col-sm-3">氏名</div>
  <div class = "col-sm-4">
    <%= f.text_field :last_name, class:"form-control", id:"last_name" %>
  </div>
  <div class = "col-sm-5">
    <%= f.text_field :first_name, class:"form-control", id:"first_name" %>
  </div>
</div>

<div class = "row mt-2">
  <div class = "col-sm-3">フリガナ</div>
  <div class = "col-sm-4">
    <%= f.text_field :last_name_kana, class:"form-control", id:"last_name_kana" %>
  </div>
  <div class = "col-sm-5">
    <%= f.text_field :first_name_kana, class:"form-control", id:"first_name_kana" %>
  </div>
</div>

<div class = "row mt-2">
  <div class = "col-sm-3">郵便番号</div>
  <div class = "col-sm-9"><%= f.number_field :postal_code, class:"form-control", id:"postal_code" %></div>
</div>

<div class = "row mt-2">
  <div class = "col-sm-3">住所</div>
  <div class = "col-sm-9"><%= f.text_field :address, class:"form-control", id:"address" %></div>
</div>

<div class = "row mt-2">
  <div class = "col-sm-3">電話番号</div>
  <div class = "col-sm-9"><%= f.telephone_field :telephone_number, class:"form-control", id:"telephone_number" %></div>
</div>

<div class = "row mt-2">
  <div class = "col-sm-3">メールアドレス</div>
  <div class = "col-sm-9"><%= f.email_field :email, class:"form-control", id:"email" %></div>
</div>