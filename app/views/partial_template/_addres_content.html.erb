<div class="row">
  <div class = "col-sm-4">
    郵便番号(ハイフンなし)
  </div>
  <div class = "col-sm-8">
    <%= f.number_field :postal_code, autocomplete: "postal_code", :placeholder => "0000000" %>
  </div>
</div>

<div class="row mt-2">
  <div class = "col-sm-4">
    住所
  </div>
  <div class = "col-sm-8">
    <%= f.text_field :address, autocomplete: "address", :placeholder => "東京都渋谷区神園町0-0" %>
  </div>
</div>

<div class="row mt-2">
  <div class = "col-sm-4">
    宛名
  </div>
  <div class = "col-sm-4">
    <%= f.text_field :name, autocomplete: "name", :placeholder => "令和道子" %>
  </div>
  <div class = "col-sm-2 offset-sm-2">
    <%= f.submit text, class: "btn btn-success" %>
  </div>
</div>