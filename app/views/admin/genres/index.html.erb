<main>
  <h4>ジャンル一覧・追加</h4>
   <p id = "notice"></p>
   <div class = "container">
    <div class = "row">
     <div class = "col-sm-12 cd-8 col-lg-5 px-5 px-sm-0 mr-auto">

      <%= render 'admin/error', error: @genre %>

  <%= form_with model: @genre, url: admin_genres_path do |f| %>

  <div class="field">
  ジャンル名
  <%= f.text_field :name, autofocus: true %>
  <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
  <% end %>

  <table>
   <thead>
    <tr>
     <th>ジャンル</th>

     <th colspan="1"></th>
    </tr>
   </thead>

   <tbody>

    <tr>
     <% @genres.each do |f| %>
     <td>
      <%= f.name %>
      <%= link_to edit_admin_genre_path(f), class: 'btn btn-success' do %>
      編集する
      <% end %>
     </td>
    </tr>
    <% end %>
   </tbody>
  </table>

    </div>
  </div>
 </div>
</main>