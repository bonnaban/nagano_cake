<body>
  <p id="notice"></p>
  <h4>注文履歴一覧</h4>

  <div class = "container">
    <div class = "row">
      <table class = "col-sm-8 offset-sm-2" border = "2">
        <thead bgcolor = "#C0C0C0">
          <tr>
            <th>購入日時</th>

            <th>購入者</th>

            <th>注文個数</th>

            <th>注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |f| %>
          <tr>
            <td>
              <%= link_to admin_order_path(f) do %>
              <%= f.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
              <% end %>
            </td>
            <td><%= f.customer.last_name + f.customer.first_name %></td>

            <td>
            <% @sum = 0 %>
            <% f.order_details.each do |order_detail| %>
            <% @sum = @sum + order_detail.amount %>
            <% end %>
            <%= @sum %>
            </td>

            <td><%= f.status_i18n %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class = "col-sm-2 offset-sm-5">
      <%= paginate @orders %>
    </div>

  </div>
</body>