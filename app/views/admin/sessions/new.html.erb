<main>
  <h2>管理者ログイン</h2>
   <p id = "notice"></p>
    <div class = "container">
     <div class = "row">
      <div class = "col-sm-12 cd-8 col-lg-5 px-5 px-sm-0 mx-auto">

<%= form_with model: @admin, url: admin_session_path do |f| %>

<%= render "admin/shared/error_messages", resource: resource %>

  <div class="field">
    メールアドレス
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    パスワード
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn  btn-sm btn-primary" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>

   </div>
  </div>
 </div>
</main>