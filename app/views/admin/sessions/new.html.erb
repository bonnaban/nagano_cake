<main>
  <h2>管理者ログイン</h2>
  <p id = "notice"></p>
  <div class = "container">
    <div class = "row">
      <div class = "col-sm-10 offset-sm-2">

        <%= form_with model: @admin, url: admin_session_path do |f| %>

        <%= render "admin/shared/error_messages", resource: resource %>

          <div class="row">
            <div class = "col-sm-3">
              メールアドレス
            </div>
            <div class = "col-sm-9">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com" %>
            </div>
          </div>

          <div class="row mt-3">
            <div class = "col-sm-3">
              パスワード
            </div>
            <div class = "col-sm-9">
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
          </div>

          <div class = "col-sm-2 offset-sm-3 mt-3">
            <%= f.submit "ログイン", class: "btn  btn-sm btn-primary" %>
          </div>
        <% end %>

        <%= render "admin/shared/links" %>

      </div>
    </div>
  </div>
</main>