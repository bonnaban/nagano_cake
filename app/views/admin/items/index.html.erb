<main>
  <p id = "notice"></p>
  <div class = "container">
    <div class = "row">
      <h4>商品一覧</h4>
      <%= link_to new_admin_item_path, class: 'btn btn-outline-dark rounded-circle p-10 ml-auto' do %>
      +
      <% end %>
    </div>

    <div class = "row">
      <div class = "col-sm-10 offset-sm-1">

        <div class = "row">
          <table class = "table table-bordered">
            <thead bgcolor = "#C0C0C0">
              <tr>
                <th class = "col-sm-2">商品ID</th>
                <th class = "col-sm-3">商品名</th>
                <th class = "col-sm-2">税抜価格</th>
                <th class = "col-sm-3">ジャンル</th>
                <th class = "col-sm-2">ステータス</th>
              </tr>
            </thead>

            <tbody>
              <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td>
                  <%= link_to admin_item_path(item) do %>
                  <%= item.name %>
                  <% end %>
                </td>
                <td><%= item.price %></td>
                <td><%= item.genre.name %></td>
                <td>
                  <% if item.is_active %><font color = "green">販売中</font>
                  <% else %><font color = "gray">販売停止中</font>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class = "col-sm-2 offset-sm-5">
      <%= paginate @items %>
    </div>
  </div>
</main>