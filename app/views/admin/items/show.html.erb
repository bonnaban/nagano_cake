<main>
  <h4>商品詳細</h4>
   <p id = "notice"></p>
    <div class = "container">
      <div class = "row">
        <div class = "col-sm-3 offset-sm-1">
          <%= image_tag @item.image, :size =>'200x150' %>
        </div>

        <div class = "col-sm-8">
          <div class = "row">
            <div class = "col-sm-3">
            <label>商品名</label>
            </div>
            <div class = "col-sm-9">
              <%= @item.name %>
            </div>

            <label class = "col-sm-3">商品説明</label>
            <div class = "col-sm-9">
              <%= @item.introduction %>
            </div>

            <label class = "col-sm-3">ジャンル名</label>
            <div class = "col-sm-9">
              <%= @item.genre.name %>
            </div>

            <label class = "col-sm-3">
            税込価格</br>
            (税抜価格)
            </label>
            <div class = "col-sm-9">
              <%= @item.price.round.to_s(:delimited) %>(<%= @item.taxin_price.round.to_s(:delimited) %>)円
            </div>

            <label class = "col-sm-3">販売ステータス</label>
            <div class = "col-sm-9">
              <% if @item.is_active %><font color = "green">販売中</font>
              <% else %><font color = "gray">販売停止中</font>
              <% end %>
            </div>

            <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %>
          </div>
        </div>
      </div>


 </div>
</main>