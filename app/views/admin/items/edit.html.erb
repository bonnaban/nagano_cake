<main>
 <h4>商品編集</h4>
  <p id = "notice"></p>
  <div class = "container">
   <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <%= render 'admin/error', error: @item %>

      <%= form_with model: @item, url: admin_item_path do |f| %>
      <div class = "row">
        <label class = "col-sm-4">商品画像</label>
        <div class = "col-sm-8">
         <%= f.file_field :image, class:"form-control-file item_image", id:"item_image", accept: "image/*" , autofocus: true %>
        </div>

        <label class = "col-sm-4">商品名</label>
        <div class = "col-sm-8">
         <%= f.text_field :name, class:"form-control name", id:"item_name" %>
        </div>

        <label class = "col-sm-4">商品説明</label>
        <div class = "col-sm-8">
         <%= f.text_area :introduction, class:"form-control name", id:"introduction" %>
        </div>

        <label class = "col-sm-4">ジャンル</label>
        <div class = "col-sm-8">
         <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択して下さい" %>
        </div>

        <label class = "col-sm-4">税抜価格</label>
        <div class = "col-sm-8 d-flex position-relative">
         <%= f.text_field :price, class:"form-control", id:"price" %><span class="position-absolute end-10">円</span>
        </div>

       <label class = "col-sm-4">販売ステータス</label>
       <div class = "col-sm-8">
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中", {style: "display: inline-block;"} %>

        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中", {style: "display: inline-block;"} %>
       </div>

       <div class = "col-sm-2 offset-sm-5">
         <%= f.submit "変更を保存", class: "btn btn-success" %>
       </div>
      </div>
      <% end %>

   </div>
  </div>
 </div>
</main>