<main>
 <h4>商品新規登録</h4>
  <p id = "notice"></p>
  <div class = "container">
   <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <%= render 'admin/error', error: @item %>

      <%= form_with model: @item, url: admin_items_path do |f| %>
      <div class = "row">
        <label class = "col-sm-3">商品画像</label>
        <div class = "col-sm-9">
         <%= f.file_field :image, class:"form-control-file item_image", id:"item_image", accept: "image/*" , autofocus: true %>
        </div>
      </div>

      <div class = "row">
        <label class = "col-sm-3">商品名</label>
        <div class = "col-sm-9">
         <%= f.text_field :name, class:"form-control name", id:"item_name" %>
        </div>
      </div>

      <div class = "row">
        <label class = "col-sm-3">商品説明</label>
        <div class = "col-sm-9">
         <%= f.text_area :introduction, class:"form-control name", id:"introduction" %>
        </div>
      </div>

      <div class = "row">
        <label class = "col-sm-3">ジャンル</label>
        <div class = "col-sm-9">
         <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択して下さい" %>
        </div>
      </div>

      <div class = "row">
        <label class = "col-sm-3">税抜価格</label>
        <div class = "col-sm-9 d-flex position-relative">
         <%= f.text_field :price, class:"form-control price", id:"price" %><span class="position-absolute end-10">円</span>
        </div>
      </div>

      <div class = "row">
       <label class = "col-sm-3">販売ステータス</label>
       <div class = "col-sm-9">
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中", {style: "display: inline-block;"} %>

        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中", {style: "display: inline-block;"} %>
       </div>
      </div>

      <div class ="row">
       <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>

      <% end %>
   </div>
  </div>
 </div>
</main>