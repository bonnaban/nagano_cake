<main>
  <h4>会員一覧</h4>
  <p id = "notice"></p>
  <div class = "container">
    <div class = "row">
      <div class = "col-sm-12 cd-8 col-lg-5 px-5 px-sm-0 mr-auto">

       <table class = "col-sm-12" border = "2">
          <thead>
            <tr>
              <th bgcolor = "#C0C0C0">会員ID</th>
              <th bgcolor = "#C0C0C0">氏名</th>
              <th bgcolor = "#C0C0C0">メールアドレス</th>
              <th bgcolor = "#C0C0C0">ステータス</th>
              <th  colspan = "4"></th>
            </tr>
          </thead>
          <tbody>
            <% @customer.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer) do %>
                <%= customer.last_name %><%= customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_active %><font color = "gray">退会</font>

                <% else %><font color = "green">有効</font>

                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>

        <%= paginate @customer %>

      </div>
    </div>
  </div>
</main>